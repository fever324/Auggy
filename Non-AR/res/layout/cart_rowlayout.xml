<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
     <ImageView
        android:id="@+id/imgCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"/>
 
    <TextView
        android:id="@+id/nameCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgCart"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/imgCart"
        android:textStyle="bold" />
 
    <TextView
        android:id="@+id/descCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameCart"
        android:layout_gravity="center"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@id/imgCart"
        android:gravity="right"
        android:textSize="10dp"
        android:textStyle="italic" />
    
    <TextView
        android:id="@+id/priceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descCart"
        android:layout_gravity="right"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@id/imgCart"
        android:gravity="right"
        android:textSize="15dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/countCart"
        android:layout_alignParentRight = "true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dip"
        android:textSize="45dp"
        android:textStyle="bold" />
   
</RelativeLayout>
